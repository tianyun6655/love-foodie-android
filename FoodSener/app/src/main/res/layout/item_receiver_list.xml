<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    >
<LinearLayout
    android:id="@+id/item_linear"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/restanrant_pic"
        android:layout_height="180dp"
        android:layout_width="match_parent"
        android:background="@drawable/noodtal"
        android:transitionName="hello"
        />
    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_height="70dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/restanrant_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/toolBarBackground"
            android:text="Noodle Talk"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            />
        <!--事后自定义linearlayout 根据数据自动添加starts-->
        <LinearLayout
            android:id="@+id/start_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/restanrant_tv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            >
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:background="@drawable/start1"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/start2"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginLeft="3dp"

                android:background="@drawable/start3"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginLeft="3dp"

                android:background="@drawable/start4"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/start5"/>

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/round_pic"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:src="@drawable/noodtal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/tv_address"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="49 N 12th,San Jose"
            android:layout_toLeftOf="@id/round_pic"
            android:layout_alignTop="@id/round_pic"
            android:textColor="#2A2A2A"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"

            />
        <TextView
            android:id="@+id/tv_chef_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/round_pic"
            android:text="Chef Name"
            android:textSize="12sp"
            android:textColor="#2A2A2A"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@id/round_pic"
            android:layout_marginBottom="3dp"

            />
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>